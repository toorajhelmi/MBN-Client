<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessageBankNet.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Entry Placeholder="To" Text="{Binding To}" />
        <Entry Placeholder="Number of Tokens" Text="{Binding TokenCount}" />
        <Entry Placeholder="Message" Text="{Binding Message}" />
        <Button Text="Send" Command="{Binding SendTokenCommand}"/>
    </StackLayout>
</ContentPage>